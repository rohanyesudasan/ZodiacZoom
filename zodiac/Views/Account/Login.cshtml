@model zodiac.Models.UserModel


@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        body {
                
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 300px;
            margin: auto;
            margin-top: 100px;
        }

        .login-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
        }

        .login-container button {
            width: 100%;
                    padding: 10px;
                    background-color: #4caf50;
                    color: white;
                    border: none;
                    cursor: pointer;
                }
        </style>
    </head>
    <body>

        <div class="login-container">

            <h2>Login</h2>
            <form method="post">
                <input type="text" name="Email" placeholder="Email" required />
                <input type="password" name="Password" placeholder="Password" required />
                <button type="submit">Login</button>
                <p>
                    <a  asp-action="Register">Register as a new user</a>
                </p>
                <p>
                    <a id="forgot-password" asp-page="">Forgot your password?</a>
                </p>
               
            </form>
        </div>
    </body>
    </html>





