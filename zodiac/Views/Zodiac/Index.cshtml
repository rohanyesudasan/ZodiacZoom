@model Database.Models.ZodiacVM
@{
    ViewBag.Title = "Find Your Zodiac";
}
<div class="container">

    <h2>Login</h2>
    <form method="post">
        <input type="date" name="BirthDate" placeholder="BirthDate" required asp-for="BirthDate" />
        @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage.Length > 0)
        {
            <div class="alert alert-danger">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <button type="submit">Find My Zodiac Sign</button>

        @if (Model != null && Model.ZodiacSign?.Length > 0)
        {
            <p>Congratulations! Your Zodiac sign is @Model.ZodiacSign</p>
        }


